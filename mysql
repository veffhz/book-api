docker run --name mysql57 -p 3306:3306 \
-e MYSQL_ROOT_PASSWORD=1234 \
-e MYSQL_USER=root \
-e MYSQL_PASSWORD=1234 \
-e MYSQL_DATABASE=bookapi \
-d mysql/mysql-server:5.7


docker exec -it mysql57 bash

mysql -u root -p
create user 'user'@'%' identified by 'pass1234';
grant all privileges on *.* to 'user'@'%' with grant option;
flush privileges;

\q
exit
restart

INSERT INTO `bookapi`.`Book` (`author`,`title`) VALUES("The 3 Mistakes of My Life", "Chetan Bhagat");
